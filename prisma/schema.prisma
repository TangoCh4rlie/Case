// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  username String  @unique
  img      String
  email    String?

  cases Case[]
}

model Case {
  id          String   @id @default(uuid())
  date        DateTime @default(now())
  description String
  color       Color @default(F0F0F0)
  place       String?
  photo       String[]
  people      String[]
  tag         String[]

  userId String

  user User @relation(fields: [userId], references: [id])
}

enum Color {
  FADBCD //black
  F0F0F0 //gray
  FF9B9B //red
  BEF388 //green
  B4F6FF //blue
  FFC37C //orange
  CF93FF //purple
  AEB9FF //darkblue
  FF8CFA //pink
}