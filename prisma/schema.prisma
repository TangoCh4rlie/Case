generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  username String  @unique
  img      String
  email    String?

  cases Case[]
}

model Case {
  id          String   @id @default(uuid())
  date        DateTime @default(now()) @unique
  description String
  color       String    @default("default")
  place       String?
  photo       String[]
  people      String[]
  tag         String[]
  userId      String

  user User @relation(fields: [userId], references: [id])
}

